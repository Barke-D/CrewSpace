rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is a member of the project
    function isMember(projectId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/projects/$(projectId)) &&
             get(/databases/$(database)/documents/projects/$(projectId)).data.members.hasAny([request.auth.uid]);
    }

    // --- Users ---
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      match /notifications/{notificationId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null;
      }
    }

    // --- Projects ---
    match /projects/{projectId} {
      allow create, read: if request.auth != null;
      
      // Only project owner can update project settings (including members)
      allow update: if request.auth != null && 
                      get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;

      // Allow deletion only if the user is the owner
      allow delete: if request.auth != null && 
                      get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid;

      // --- Subcollections ---
      
      match /tasks/{taskId} {
        allow read, create: if isMember(projectId);
        
        // Only owner or task creator can delete tasks
        allow delete: if request.auth != null && (
                        get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid ||
                        resource.data.createdBy == request.auth.uid
                      );

        allow update: if isMember(projectId) && (
          // 1. Project owner or task creator can update anything
          (get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId == request.auth.uid) ||
          (resource.data.createdBy == request.auth.uid) ||
          (
            // 2. Others can only update status/assignedTo/metadata/subTasks/etc
            request.resource.data.diff(resource.data).affectedKeys()
              .hasOnly(['status', 'completedBy', 'completedAt', 'isLate', 'subTasks', 'assignedTo', 'updatedAt'])
          )
        );
      }

      match /activities/{activityId} {
        allow read, write: if isMember(projectId);
      }

      match /messages/{messageId} {
        allow read, write: if isMember(projectId);
      }
    }
  }
}
